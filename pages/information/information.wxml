<!--pages/information/information.wxml-->
<view>个人档案信息</view>
<view>
  <view class="page-section">
    <view class="weui-cells__title">年龄：</view>
    <view wx:if="{{!isInput}}">{{age}}</view>
    <view  wx:if="{{isInput}}"  class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" bindinput="AgeInput" type="number" placeholder="年龄" value="{{age}}"></input>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">性别：</view>
    <view wx:if="{{!isInput}}">{{gender}}</view>
    <view  wx:if="{{isInput}}"  class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" bindinput="GenderInput" type="text" placeholder="性别" value="{{gender}}"></input>
      </view>
    </view>
  </view>

</view>

<button   bindtap="edit" >修改</button>
<button   bindtap="save"  >保存</button>